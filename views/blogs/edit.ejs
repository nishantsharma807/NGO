<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center">Edit <%= blog.name %></h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/blogs/<%= blog._id %>?_method=PUT" method="POST" enctype="multipart/form-data">
                <div class="form-group">
                    <input class="form-control" type="text" name="name" value="<%= blog.name %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="textarea" name="description" value="<%= blog.description %>">
                </div>
                <div class="form-group">
                    <label for="">Current Image</label>
                    <p>
                        <% if (!blog.image) { %>
                            <img class="noimage" id="noimage" src="/blog_images/noimage.png" alt="">
                        <% } else {%>
                            <img id="noimage" src="/blog_images/<%= blog._id %>/<%= blog.image %>" alt="">
                        <% } %>
                    </p>
                </div>
                <div class="form-group">
                    <label for="">Upload Image</label>
                    <input type="file" class="form-control" name="image" id="img">
                    <img src="#" id="imgPreview" alt="">
                </div>
                <input type="hidden" name="blogImage" value="<%= blog.image %>">
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/blogs">Go Back</a>
        </div>
    </div>
</div>

<script
    src="https://code.jquery.com/jquery-3.3.1.min.js"
    integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8="
    crossorigin="anonymous">
</script>

<script>
    function readURL(input) {
        if (input.files && input.files[0]) {
            var reader = new FileReader();
            reader.onload = function(e) {
                $("#imgPreview").attr('src', e.target.result).width(100).height(100);
            }
            reader.readAsDataURL(input.files[0]);
        }
    }
    $("#img").change(function() {
        readURL(this);
    });
</script>
<% include ../partials/footer %>